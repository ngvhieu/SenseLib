@model SenseLib.Models.Menu

@{
    ViewData["Title"] = "Chi tiết Menu";
    Layout = "_AdminLayout";
}



<section class="section dashboard">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Thông tin chi tiết Menu</h5>
                    
                    <div class="row mb-4">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered">
                                    <tbody>
                                        <tr>
                                            <th scope="row" style="width: 25%">ID</th>
                                            <td>@Model.MenuID</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Tên Menu</th>
                                            <td>@Model.MenuName</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Trạng thái</th>
                                            <td>
                                                @if (Model.IsActive)
                                                {
                                                    <span class="badge bg-success">Kích hoạt</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Vô hiệu</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Controller</th>
                                            <td>@Model.ControllerName</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Action</th>
                                            <td>@Model.ActionName</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Cấp độ</th>
                                            <td>@Model.Levels</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Menu cha</th>
                                            <td>@Model.ParentID</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Đường dẫn</th>
                                            <td>@Model.Link</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Thứ tự</th>
                                            <td>@Model.MenuOrder</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Vị trí</th>
                                            <td>
                                                @switch (Model.Position)
                                                {
                                                    case 1:
                                                        <span class="badge bg-primary">Menu chính</span>
                                                        break;
                                                    case 2:
                                                        <span class="badge bg-info">Liên kết nhanh</span>
                                                        break;
                                                    case 3:
                                                        <span class="badge bg-warning">Danh mục</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">Khác (@Model.Position)</span>
                                                        break;
                                                }
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    
                    <div class="text-center">
                        <a asp-action="Edit" asp-route-id="@Model.MenuID" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 