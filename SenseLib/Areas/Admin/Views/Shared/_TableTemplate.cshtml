@*
    File mẫu cho thiết kế bảng quản lý trong admin
    Cách sử dụng:
    1. Thêm partial view này vào trang Index của các phần quản lý
    2. Truyền model và các thông số cần thiết
*@

@model dynamic

<section class="section dashboard">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title">@ViewBag.TableTitle</h5>
                        @if (ViewBag.ShowAddButton != false)
                        {
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus"></i> @(ViewBag.AddButtonText ?? "Thêm mới")
                            </a>
                        }
                    </div>

                    @* Card thống kê *@
                    @if (ViewBag.StatsCards != null)
                    {
                        <div class="row mb-3">
                            @foreach (var card in ViewBag.StatsCards)
                            {
                                <div class="col-md-@(card.Width ?? 4)">
                                    <div class="card info-card @card.ColorClass">
                                        <div class="card-body">
                                            <h5 class="card-title">@card.Title</h5>
                                            <div class="d-flex align-items-center">
                                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                                    <i class="bi @card.Icon"></i>
                                                </div>
                                                <div class="ps-3">
                                                    <h6>@card.Value</h6>
                                                    @try
                                                    {
                                                        var description = card.Description;
                                                        if (description != null && !string.IsNullOrEmpty(description.ToString()))
                                                        {
                                                            <span class="text-muted small pt-2">@description</span>
                                                        }
                                                    }
                                                    catch
                                                    {
                                                        // Thuộc tính Description không tồn tại - bỏ qua
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    @* Hiển thị thông báo thành công *@
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-1"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @* Hiển thị thông báo lỗi *@
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @* Bộ lọc *@
                    @if (ViewBag.ShowFilters == true)
                    {
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="card filter-card">
                                    <div class="card-header d-flex justify-content-between align-items-center bg-light">
                                        <div>
                                            <strong>Bộ lọc</strong>
                                        </div>
                                        <div>
                                            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                                                Đặt lại
                                            </a>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        @if (ViewBag.FilterContent != null)
                                        {
                                            <partial name="@ViewBag.FilterContent" />
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @* Bảng dữ liệu *@
                    <div class="table-responsive">
                        <table class="table table-striped table-hover datatable">
                            <thead>
                                <tr>
                                    @if (ViewBag.TableColumns != null)
                                    {
                                        @foreach (var column in ViewBag.TableColumns)
                                        {
                                            <th scope="col">@column</th>
                                        }
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.TableContent != null)
                                {
                                    <partial name="@ViewBag.TableContent" model="Model" />
                                }
                            </tbody>
                        </table>
                    </div>

                    @* Phân trang *@
                    @if (ViewBag.TotalPages > 1)
                    {
                        <div class="pagination-container mt-3">
                            <ul class="pagination">
                                @if (ViewBag.CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-all-route-data="ViewBag.RouteData">
                                            Trước
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">Trước</span>
                                    </li>
                                }

                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-all-route-data="ViewBag.RouteData">
                                            @i
                                        </a>
                                    </li>
                                }

                                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-all-route-data="ViewBag.RouteData">
                                            Tiếp
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">Tiếp</span>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.datatable').DataTable({
                "language": {
                    "lengthMenu": "Hiển thị _MENU_ mục",
                    "zeroRecords": "Không tìm thấy dữ liệu",
                    "info": "Hiển thị _START_ đến _END_ của _TOTAL_ mục",
                    "infoEmpty": "Không có dữ liệu",
                    "infoFiltered": "(lọc từ _MAX_ mục)",
                    "search": "Tìm kiếm:",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "Sau",
                        "previous": "Trước"
                    }
                },
                "responsive": true
            });
            
            // Tự động đóng thông báo sau 5 giây
            setTimeout(function() {
                $(".alert").alert('close');
            }, 5000);
        });
    </script>
} 