@{
    ViewData["Title"] = "Quên Mật Khẩu";
}

<div class="auth-container">
    <div class="auth-header">
        <h1>Quên Mật Khẩu?</h1>
        <p>Vui lòng nhập email của bạn để lấy lại mật khẩu</p>
    </div>
    
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }
    
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">
            @ViewBag.SuccessMessage
        </div>
    }
    
    <form asp-action="ForgotPassword" asp-controller="Account" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" required>
        </div>
        
        <button type="submit" class="auth-btn">Gửi yêu cầu đặt lại mật khẩu</button>
    </form>
    
    <div class="auth-footer">
        <p><a href="@Url.Action("Login", "Account")">Quay lại trang đăng nhập</a></p>
    </div>
</div> 