@{
    ViewData["Title"] = "Quản lý Menu";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h1 class="text-center mb-4">Quản lý Menu Website</h1>
                    
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    
                    @if (TempData["InfoMessage"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            @TempData["InfoMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    
                    <div class="row mt-4">
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h3 class="card-title">Menu chính</h3>
                                    <p>Thêm các liên kết vào thanh điều hướng chính của website.</p>
                                    
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="d-grid">
                                                <a asp-controller="SiteMenu" asp-action="AddAboutMenuItem" class="btn btn-primary">
                                                    <i class="fas fa-info-circle me-2"></i>Thêm menu Giới thiệu
                                                </a>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="d-grid">
                                                <a asp-controller="SiteMenu" asp-action="AddContactMenuItem" class="btn btn-primary">
                                                    <i class="fas fa-envelope me-2"></i>Thêm menu Liên hệ
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h3 class="card-title">Menu footer</h3>
                                    <p>Thêm các liên kết vào khu vực footer của website.</p>
                                    
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="d-grid">
                                                <a asp-controller="SiteMenu" asp-action="AddFooterAboutMenuItem" class="btn btn-outline-primary">
                                                    <i class="fas fa-info-circle me-2"></i>Thêm Giới thiệu vào footer
                                                </a>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="d-grid">
                                                <a asp-controller="SiteMenu" asp-action="AddFooterContactMenuItem" class="btn btn-outline-primary">
                                                    <i class="fas fa-envelope me-2"></i>Thêm Liên hệ vào footer
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="text-center mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 