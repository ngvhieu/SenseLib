@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Khởi tạo component TTS
            const ttsContainer = document.getElementById('ttsContainer');
            if (ttsContainer) {
                new DocumentTTS(@Model.DocumentID, ttsContainer, {
                    languageCode: 'vi-VN',
                    voiceName: 'vi-VN-Standard-A',
                    buttonClass: 'btn btn-outline-secondary',
                    buttonText: 'Nghe đọc',
                    darkMode: document.body.classList.contains('dark-mode') // Tự động phát hiện dark mode
                });
            }
        });
    </script>
} 