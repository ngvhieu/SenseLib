<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Trang xem tài liệu</h5>
                    <div style="width: 200px;">
                        <div id="ttsContainer"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            <!-- ... PDF Viewer content ... -->
        </div>
